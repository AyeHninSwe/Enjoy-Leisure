     <TextView
        android:id="@+id/asian_food5_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="\nမေလးရွား ထမင္းေၾကာ္ (Nasi Goreng)\n" />
    
